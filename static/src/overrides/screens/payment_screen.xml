<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_credomatic.PaymentScreenButtons" t-inherit="point_of_sale.PaymentScreenButtons" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('payment-buttons')]" position="inside">
            <button class="button btn btn-light py-3 text-start rounded-0 border-bottom" 
                t-on-click="consultarPuntos">
                <i class="fa fa-tag me-2" />Consulta de Puntos
            </button>
        </xpath>
    </t>

</templates>