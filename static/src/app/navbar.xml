<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">

    <t t-name="pos_credomatic.Navbar" t-inherit="point_of_sale.Navbar" t-inherit-mode="extension">
        <xpath expr="//div[hasclass('status-buttons')]" position="before">
            <div class="button btn btn-light btn-secondary" t-on-click="cierreAutomatico">
                <i class="fa fa-archive me-1" />
                <span> </span>
                <span>Cierre Pagos Automáticos</span>
            </div>
            <div class="button btn btn-light btn-secondary" t-on-click="cierrePuntos">
                <i class="fa fa-archive me-1" />
                <span> </span>
                <span>Cierre Canje de Puntos</span>
            </div>
            <div class="button btn btn-light btn-secondary" t-on-click="reporteAutomatico">
                <i class="fa fa-archive me-1" />
                <span> </span>
                <span>Reporte Pagos Automáticos</span>
            </div>
            <div class="button btn btn-light btn-secondary" t-on-click="reportePuntos">
                <i class="fa fa-archive me-1" />
                <span> </span>
                <span>Reporte Canje de Puntos</span>
            </div>
        </xpath>
    </t>

</templates>